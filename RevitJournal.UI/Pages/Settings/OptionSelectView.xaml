<UserControl x:Class="RevitJournalUI.Pages.Settings.OptionSelectView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RevitJournalUI.Pages.Settings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Visibility="{Binding OptionVisibility}"
             IsEnabled="{Binding IsEnabled}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="{StaticResource GridFirstColumnWidth}"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0"
               Content="{Binding LabelName}"
               Style="{StaticResource UILabel}"/>
        <ComboBox Grid.Column="1"
                  ItemsSource="{Binding Values}"
                  SelectedItem="{Binding Value}"
                  Style="{StaticResource UIComboBox}">
        </ComboBox>
        <Button Content="Default" Grid.Column="2"
                Command="{Binding DefaultCommand}"
                Style="{StaticResource UIButton}"/>
    </Grid>
</UserControl>
