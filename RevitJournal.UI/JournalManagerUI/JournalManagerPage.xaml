<Page x:Class="RevitJournalUI.JournalManagerUI.JournalManagerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:RevitJournalUI.JournalManagerUI"
      xmlns:task="clr-namespace:RevitJournalUI.JournalTaskUI"
      xmlns:options="clr-namespace:RevitJournalUI.JournalTaskUI.Options"
      xmlns:filter="clr-namespace:RevitJournalUI.JournalTaskUI.FamilyFilter"
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1000"
      Title="JournalManagerPage" Loaded="Page_Loaded">
    <Page.Resources>
        <CollectionViewSource x:Key="FilterListBox" Source="{Binding FilterViewModels}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="Group" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
        <Style x:Key="LabelDir" TargetType="{x:Type Label}" BasedOn="{StaticResource UILabel}">
            <Setter Property="Margin" Value="0, 2"/>
        </Style>

        <Style x:Key="BoxDir" TargetType="{x:Type TextBox}" BasedOn="{StaticResource UITextBox}">
            <Setter Property="Background" Value="WhiteSmoke"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Margin" Value="2,4"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="IsTabStop" Value="False"/>
        </Style>
        
        <Style x:Key="SetupList" TargetType="{x:Type ListBox}" BasedOn="{StaticResource UIListBox}">
            <Setter Property="Margin" Value="4, 0, 2, 2"/>
        </Style>
    </Page.Resources>
    <Page.DataContext>
        <local:JournalManagerPageModel/>
    </Page.DataContext>
    <DockPanel LastChildFill="True" Margin="5">
        <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            <Grid x:Name="Directories"
                  Grid.Column="0" Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition Height="*"/>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition/>
                    <ColumnDefinition MinWidth="120" Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Label Content="Journal Directory" 
                       Grid.Column="0" Grid.Row="0"
                       Style="{StaticResource LabelDir}"/>
                <TextBox Text="{Binding JournalDirectory}"
                         Style="{StaticResource BoxDir}"
                         Grid.Column="1" Grid.Row="0"/>
                <Button Content="Choose" 
                        Command="{Binding ChooseJournalDirectoryCommand}"
                        CommandParameter="{Binding JournalDirectory}"
                        Style="{StaticResource UIButton}"
                        Grid.Column="2" Grid.Row="0"/>
                <Label Content="Family Directory" 
                       Grid.Column="0" Grid.Row="1"
                       Style="{StaticResource LabelDir}"/>
                <TextBox Text="{Binding FamilyDirectory}"
                         Style="{StaticResource BoxDir}"
                         Grid.Column="1" Grid.Row="1"/>
                <Button Content="Choose" 
                        Command="{Binding ChooseFamilyDirectoryCommand}"
                        CommandParameter="{Binding FamilyDirectory}"
                        Style="{StaticResource UIButton}"
                        Grid.Column="2" Grid.Row="1"/>
                <Label Content="Actions Directory" 
                       Grid.Column="0" Grid.Row="2"
                       Style="{StaticResource LabelDir}"/>
                <TextBox Text="{Binding ActionDirectory}"
                         Style="{StaticResource BoxDir}"
                         Grid.Column="1" Grid.Row="2"/>
                <Button Content="Choose" 
                        Command="{Binding ChooseActionDirectoryCommand}"
                        CommandParameter="{Binding ActionDirectory}"
                        Style="{StaticResource UIButton}"
                        Grid.Column="2" Grid.Row="2"/>
                <Grid Grid.Column="0" Grid.ColumnSpan="2"
                      Grid.Row="3" Grid.RowSpan="4"
                      Margin="{StaticResource NullThick}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="Progess" 
                              Grid.Column="0" Grid.Row="0"
                              Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition MinWidth="50" Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="{Binding LoadingProcessTitel}" 
                                   Style="{StaticResource UILabel}"
                                   Grid.Column="0"/>
                            <ProgressBar Value="{Binding LoadingProcessPercent}"
                                         Margin="{StaticResource NullThick}"
                                         Minimum="0" Maximum="100" 
                                         Grid.Column="1"/>
                        </Grid>
                        <Grid x:Name="Setup" 
                              Grid.Column="0" Grid.Row="0"
                              Margin="{StaticResource NullThick}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Filter" Grid.Column="0" 
                                   Margin="0" 
                                   Style="{StaticResource UILabel}"/>
                            <Button Content="Setup"
                                    Command="{Binding SetupFilterCommand}"
                                    Visibility="{Binding FileFilterVisibility }"
                                    Style="{StaticResource UIButton}"
                                    Grid.Column="1"/>
                        </Grid>
                        <ListBox ItemsSource="{Binding Source={StaticResource FilterListBox}}" 
                                 Style="{StaticResource SetupList}"
                                 Grid.Column="0" Grid.Row="1">
                            <ListBox.GroupStyle>
                                <GroupStyle>
                                    <GroupStyle.Panel>
                                        <ItemsPanelTemplate>
                                            <VirtualizingStackPanel Orientation="Vertical" />
                                        </ItemsPanelTemplate>
                                    </GroupStyle.Panel>
                                    <GroupStyle.ContainerStyle>
                                        <Style TargetType="{x:Type GroupItem}">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate>
                                                        <Expander Header="{Binding Name}"
                                                                  IsExpanded="False">
                                                            <ItemsPresenter/>
                                                        </Expander>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </GroupStyle.ContainerStyle>
                                </GroupStyle>
                            </ListBox.GroupStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate DataType="{x:Type filter:FilterViewModel}">
                                    <Border BorderThickness="0">
                                        <Grid>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Filter}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="{x:Type ListBoxItem}">
                                    <Setter Property="Padding" Value="0" />
                                    <Setter Property="Margin" Value="25,0,0,0" />
                                </Style>
                            </ListBox.ItemContainerStyle>
                        </ListBox>
                        <Grid Grid.Column="1" Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Journal Tasks" Grid.Column="0"
                                   Style="{StaticResource LabelDir}"/>
                            <Button Content="Setup" 
                                    Command="{Binding TaskActionsCommand}"
                                    Visibility="{Binding TaskActionsVisibility}"
                                    Style="{StaticResource UIButton}"
                                    Grid.Column="1"/>
                        </Grid>
                        <ListBox ItemsSource="{Binding Actions}" 
                                 DisplayMemberPath="Name"
                                 Style="{StaticResource SetupList}"
                                 Grid.Column="1" Grid.Row="1"/>
                    </Grid>
                </Grid>
                <Button Content="{Binding DuplicateName}"
                        Grid.Column="2" Grid.Row="4" 
                        Style="{StaticResource UIButton}"
                        Command="{Binding DuplicateCommand}"
                        CommandParameter="{Binding FamiliesViewModel}"/>
                <Button Content="{Binding EditName}"
                        Grid.Column="2" Grid.Row="5" 
                        Style="{StaticResource UIButton}"
                        Command="{Binding EditCommand}"
                        CommandParameter="{Binding FamiliesViewModel}"/>
            </Grid>
            <options:TaskOptionView Grid.Column="1" Grid.Row="0"
                                    DataContext="{Binding TaskOptionViewModel}"/>
        </Grid>
        <WrapPanel DockPanel.Dock="Bottom" 
                   HorizontalAlignment="Right">
            <WrapPanel Visibility="{Binding TaskVisibility}">
                <Button Content="Cancel" 
                        Visibility="{Binding CancelVisibility}"
                        IsEnabled="{Binding CancelEnable}"
                        Command="{Binding CancelCommand}"
                        Style="{StaticResource UIButton}"/>
                <Button Content="Back"  
                        Visibility="{Binding BackVisibility}"
                        Command="{Binding BackCommand}"
                        Style="{StaticResource UIButton}"/>
                <Button Content="Run" 
                        IsEnabled="{Binding ExecuteEnable}"
                        Command="{Binding ExecuteCommand}"
                        Style="{StaticResource UIButton}"/>
            </WrapPanel>
            <WrapPanel Visibility="{Binding FamiliesVisibility}">
                <Button Content="{Binding CreateName}"
                        Command="{Binding CreateCommand}" 
                        CommandParameter="{Binding FamiliesViewModel}"
                        Style="{StaticResource UIButton}"/>
            </WrapPanel>
        </WrapPanel>
        <Grid>
            <Grid Visibility="{Binding FamiliesVisibility}"
                  Margin="{StaticResource TwoThick}">
                <task:FamilyOverviewView DataContext="{Binding FamiliesViewModel}"/>
            </Grid>
            <Grid Visibility="{Binding TaskVisibility}"
                  Margin="{StaticResource TwoThick}">
                <task:JournalTaskOverviewView DataContext="{Binding TasksViewModel }"/>
            </Grid>
        </Grid>
    </DockPanel>
</Page>
